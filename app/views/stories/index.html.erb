<h1>Listing stories</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.body %></td>
        <td><%= story.user %></td>
        <td><%= link_to 'Show', story %></td>
        <td><%= link_to 'Ampliar', extend_story_path( story )  %></td>
        <td><%= link_to 'Edit', edit_story_path(story) if current_user == story.user %></td>
        <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } if current_user == story.user  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

